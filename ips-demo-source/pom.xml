<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.redhat.xpaas.qe</groupId>
  <artifactId>LoanApproval</artifactId>
  <version>1.18</version>
  <packaging>kjar</packaging>
  <name>LoanApproval</name>
  <distributionManagement>
    <repository>
      <id>deployment</id>
      <name>OpenShift Maven repo</name>
      <url>http://maven.latest.xpaas/api/hosted/local-deployments/</url>
    </repository>
    <snapshotRepository>
      <id>deployment</id>
      <name>OpenShift Maven repo</name>
      <url>http://maven.latest.xpaas/api/hosted/local-deployments/</url>
    </snapshotRepository>
  </distributionManagement>

  <dependencies>
    <dependency>
      <groupId>org.kie</groupId>
      <artifactId>kie-api</artifactId>
      <version>6.4.0.Final-redhat-3</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.kie</groupId>
        <artifactId>kie-maven-plugin</artifactId>
        <version>6.4.0.Final-redhat-3</version>
        <extensions>true</extensions>
      </plugin>
    </plugins>
  </build>
</project>
